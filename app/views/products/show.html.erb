<h1>Products#show HAHAHAHAH</h1>


<% if current_user %>

<h3>Reviews</h3>

<p>Reviews for <%= @product.name %> </p>

<% @product.review.each do |review| %>
	<p>
		<%= review.comment %>
		<br>
		<% if review.user != nil %>
				<em> by <%= review.user.email %> </em>
				Added on: <%= review.created_at %>
			<% end %>
		</p>

	<% end %>

	<h4>New Review</h4>

	<%= form_for([@product, @review]) do |f| %>
	<% if @review.errors.any? %> 
	<div id="error_explanation">
		<h2> <%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved: </h2>
		<ul>
			<%= @review.errors.full_messages.each do |msg| %>
			<li><%= msg %> </li>
			<% end %>
		</ul>
	</div>
	<% end %>

	<div class="field">
		<%= f.label :comment %><br/>
		<%= f.text_area :comment %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
	<% end %>

	<% else %>
	<p>Please <%= link_to "Login in", new_sessions_path %> to add a review. </p>


<% end %>

<p>Find me in app/views/products/show.html.erb</p>
